rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User can only read/write their own data and ALL subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Wildcard rule for ALL subcollections under user
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
